{
    "manifest_version": 2,
    "name": "Text to Speech and Translate",
    "version": "1.2",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["hanziwriter.min.js", "content.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "64": "./chinaicon64.png"
    },
    "commands": {
        "speak_command": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Activate Speak Text"
        }
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}
